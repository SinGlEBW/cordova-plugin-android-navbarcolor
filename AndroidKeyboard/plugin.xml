<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-android-keyboard" version="1.0.0" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
  <name>AndroidKeyboard</name>
  <js-module name="AndroidKeyboard" src="www/AndroidKeyboard.js">
    <clobbers target="cordova.plugins.AndroidKeyboard" />
  </js-module>

  <platform name="android">
    <config-file parent="/*" target="AndroidManifest.xml"></config-file>

    <config-file parent="/*" target="res/xml/config.xml">
      <feature name="AndroidKeyboard">
        <param name="android-package" value="ru.cordova.android.keyboard.AndroidKeyboard" />
        <param name="onload" value="true" />
      </feature>
    </config-file>

    <source-file src="src/android/AndroidKeyboard.java" target-dir="src/ru/cordova/android/keyboard/AndroidKeyboard" />
 
  </platform>
</plugin>